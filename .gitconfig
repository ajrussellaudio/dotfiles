[include]
  path = "$HOMEBREW_PREFIX/bin/delta"

[user]
  name = Alan Russell
  email = ajrussellaudio@gmail.com

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true    # use n and N to move between diff sections
  dark = true
  theme = "Catppuccin Mocha"

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
